{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for snippets2.json",

  "type": "object",

  "properties": {
    "keywords": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [ "id", "key", "text" ],

        "properties": {
          "key": { "type": "string" },
          "id": { "type": "string" },
          "text": { "type": "string" },
          "comment": {
            "anyOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          }
        }
      }
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalItems": false,

        "required": [ "id", "labels", "text" ],

        "properties": {
          "id": { "type": "string" },
          "labels": {
            "type": "object",
            "required": [ "en", "jp", "short_en", "short_jp" ],
            "properties": {
              "jp": {
                "type": "string"
              },
              "en": {
                "type": "string"
              },
              "short_jp": {
                "type": "string"
              },
              "short_en": {
                "type": "string"
              },
              "jp_fully_roman": {
                "type": "string"
              }
            }
          },

          "text": {
            "type": "array",
            "items": { "type": "string" },
            "comment": {
              "anyOf": [
                { "type": "string" },
                {
                  "type": "array",
                  "items": { "type": "string" }
                }
              ]
            }
          },

          "arg_types": { "$ref": "#/properties/contents/items/properties/arg_types" }
        }
      }
    },
    "contents": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [ "labels", "text", "templates" ],
        "properties": {
          "labels": {
            "type": "object",
            "required": [ "jp_fully_roman" ],
            "properties": {
              "jp": {
                "type": "array",
                "items": { "type": "string" }
              },
              "en": {
                "type": "array",
                "items": { "type": "string" }
              },
              "short_jp": {
                "type": "array",
                "items": { "type": "string" }
              },
              "short_en": {
                "type": "array",
                "items": { "type": "string" }
              },
              "jp_fully_roman": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "text": {
            "type": "array",
            "items": { "type": "string" }
          },
          "templates": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "arg_types": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [ "number_full", "number_half", "any", "ref", "alphabet" ]
            }
          },
          "words": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [ "text", "labels" ],
              "properties": {
                "text": { "type": "string" },
                "labels": {
                  "type": "object",
                  "required": [ "jp_fully_roman" ],
                  "properties": {
                    "jp": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "en": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "short_jp": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "short_en": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "jp_fully_roman": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "words_id": { "type": "string" },
          "words_ref": { "type": "string" },
          "wordsLabelAutoCase": {
            "type": "boolean",
            "default": true
          },

          "description": { "type": "string" },
          "documentLink": {
            "type": "string",
            "format": "uri"
          },
          "obsolete": { "type": "boolean" },

          "comment": {
            "anyOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          }
        }
      }
    }
  }
}
