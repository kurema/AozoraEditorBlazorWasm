<iframe class="@(Selected == SubPanelContents.Iframe? string.Empty:"hidden")" style="width:100%;height:100%;border:none;min-height:0;min-width:0;" sandbox="allow-popups-to-escape-sandbox allow-same-origin" srcdoc="@PreviewDocument"></iframe>

<article class="subpanel_body @(Selected == SubPanelContents.Iframe? "hidden":string.Empty)" style="overflow:scroll;">
	@switch (Selected)
	{
		case SubPanelContents.Snippets:
			<CascadingValue Value="Parent">
				<AozoraEditor.Shared.Shared.SubPanels.SnippetsList />
			</CascadingValue>
			break;
		case SubPanelContents.Dictionary:
			<CascadingValue Value="Parent">
				<AozoraEditor.Shared.Shared.SubPanels.DictionaryPage />
			</CascadingValue>
			break;
	}

</article>

@code {
	public enum SubPanelContents
	{
		Iframe, Snippets, Dictionary,
	}

	[Parameter]
	public SubPanelContents Selected { get; set; }

	//public RenderFragment? Content { get; set; }

	[Parameter]
	public string PreviewDocument { get; set; } = "<html><body>空のプレビュー画面</body></html>";

	[CascadingParameter]
	public EditorPage? Parent { get; private set; }
}
