@inject IJSRuntime JSRuntime;

<div class="ContainerMain">
	<div class="PanelTop">
		@*		<button class="ButtonMini" @onclick="@ShowPreview">
		<span class="material-symbols-outlined">preview</span>
		</button>
		*@
		@*		<div class="FileInputButton ButtonMini">
