{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "https://raw.githubusercontent.com/kurema/AozoraEditorBlazorWasm/master/AozoraEditor/AozoraEditor/Program.cs",
  "title": "JSON Schema for snippets.json",

  "type": "array",

  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [ "label", "text" ],
    "properties": {
      "label": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "array",
            "items": { "type": "string" }
          }
        ]
      },
      "text": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "array",
            "items": { "type": "string" }
          }
        ]
      },
      "argType": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [ "number_full", "number_half", "any" ]
        }

      }
    }
  }

