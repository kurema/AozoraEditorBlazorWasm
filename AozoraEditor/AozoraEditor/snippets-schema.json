{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for snippets.json",

  "type": "array",

  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [ "type", "label", "text" ],
    "properties": {
      "type": {
        "type": "string",
        "enum": [ "command", "text" ]
      },
      "label": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "array",
            "items": { "type": "string" }
          }
        ]
      },
      "text": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "array",
            "items": { "type": "string" }
          }
        ]
      },
      "argType": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [ "number_full", "number_half", "any" ]
        }
      }
    }
  }
}
